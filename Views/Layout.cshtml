@inject OrchardCore.Settings.ISiteService SiteService
@{
    var site = await SiteService.GetSiteSettingsAsync();
}
<!DOCTYPE html>
<html lang="@site.Culture">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="author" content="" />
        <meta name="keywords" content="ekonomia, edukacja, przedsiębiorczość" />
        <meta name="description" content="Projekt LEM ma na celu wprowadzenie uczniów szkół średnich w podstawowe zagadnienia związane z ekonomią (pieniądz, handel, system bankowy, inflacja)." />
        <meta name="theme-color" content="#1d485b" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@("@Instytut_Misesa")" />
        <meta name="twitter:title" content="Lekcje Ekonomii dla Młodzieży" />
        <meta name="twitter:description" content="Edukacja | Przedsiębiorczość | Gospodarka" />
        <meta name="twitter:image" content="http://ekonomiadlamlodziezy.pl/images/lem-twitter-card.jpg" />

        <title>@RenderTitleSegments(site.SiteName, "before")</title>

        <!-- Bootstrap core CSS -->
        <style asp-name="bootstrap" use-cdn="true"></style>
        <!-- fonts -->
        <style asp-name="font-awesome" use-cdn="true"></style>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300i,400&amp;subset=latin-ext" />

        <!-- Custom styles for this template -->
        <link href="/KoLiber.LEM/css/style.css" rel="stylesheet" />

        <link rel="icon" sizes="192x192" href="/KoLiber.LEM/images/high-favicon.png" />
        <link rel="Shortcut icon" href="KoLiber.LEM/favicon.ico" />

        <!-- inject jQuery -->
        <script asp-name="jQuery" version="2.2.4" use-cdn="true" at="Foot"></script>

        <resources Type="Stylesheet"/>
    </head>

    <body id="page-top">

        @await RenderSectionAsync("Content", required: false)

        <!-- Footer -->
        @await RenderSectionAsync("Footer", required: false)

        <div class="backToTop hidden-xs"><a href="#slider"><i class="fa fa-chevron-up" aria-hidden="true"></i></a></div>

        <resources Type="Footer"/>

        <script>(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){(i[r].q=i[r].q||[]).push(arguments)};i[r].l=1*new Date();a=s.createElement(o);m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');ga('create', 'UA-48080415-3', 'auto');ga('send', 'pageview');</script>

        <script async src="https://widget.fanimani.pl/DJZU9kMu9MMbiX5Woyp7s3.js"></script>
        <script src="/KoLiber.LEM/js/scripts.min.js"></script>
    </body>
</html>
